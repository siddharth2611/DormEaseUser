<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmess"
    android:padding="16dp">

    <!-- Horizontal Scroll View for Days -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#3A3A3A"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Days Tabs -->
            <Button
                android:id="@+id/btn_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#3A3A3A"
                android:padding="16dp"
                android:text="MON"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUE"
                android:background="#3A3A3A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WED"
                android:background="#3A3A3A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THU"
                android:background="#3A3A3A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:background="#3A3A3A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAT"
                android:background="#3A3A3A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:background="#3A3A3A"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Vertical Scroll View for Menu -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontalScrollView"
        android:layout_marginTop="16dp">

        <!-- Wrap all the card views inside a single LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Breakfast Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#D3D3D3"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BREAKFAST"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:30 AM - 8:50 AM"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bread Butter,\nJam,\nCorn Flakes,\nBoiled Eggs,\nMilk+Tea,\nSauce"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Lunch Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#D3D3D3"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LUNCH"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:30 PM - 1:30 PM"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_lunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rajma,\nAloo Shimla Mirch,\nRoti,\nPlain Rice,\nBoondi Raita,\nSalad + Pickle"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Snacks Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#D3D3D3"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SNACKS"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5:00 PM - 6:00 PM"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_snacks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samosa\nChhole + Meethi Chutney\nGreen Chutney\nTea"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dinner Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#D3D3D3"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DINNER"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8:00 PM - 9:00 PM"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_dinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paneer Do Pyaza,\nDal Tadka,\nRoti,\nJeera Rice,\nSalad + Pickle"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
